extends partials/layout.pug

block content
	.row
		.col-md-4.col-md-offset-4.user-profile__single
			img.img-responsive.center-block(src=user.image)
			h1.text-center #{user.first_name} #{user.last_name}
			h3.text-center #{user.city} #{user.state}
			p.text-center #{user.bio}

			if user.available
				p.text-center Available
			else
				p.text-center Not available

			h5.text-center Interests: #{user.interests}
			h5.text-center Aversions: #{user.aversions}
			h5.text-center Contact: #{user.email}

